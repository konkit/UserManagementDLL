@model UserDataLib.Models.UserOperations

@{
    ViewBag.Title = "DeleteOperation";
}

@using UserDataLib.Services;
@using UserDataLib.Models;
@using ManagerApp.Models;

<h2>Details</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>User</h4>
        @Html.HiddenFor(model => model.UserId)

        <b>
            @Html.DisplayNameFor(model => model.Operations)
        </b>
        <br>

        <div class="form-group">
            <div class="col-md-10">
                @{
                    Model.Operations = new UserManager(new ManagerContext()).Find(Model.UserId).Operations.ToList();    
                }
                @Html.DropDownListFor(model => model.OperationId, new SelectList(Model.Operations, "id", "name"), "-- Please select an operation --")
                @Html.ValidationMessageFor(model => model.OperationId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Delete operation" class="btn btn-default" />
            </div>
        </div>

    </div>
}
    <p>
        @Html.ActionLink("Back", "Details", new { id = Model.UserId })
    </p>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
