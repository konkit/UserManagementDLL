@model IEnumerable<UserDataLib.Models.User>

@{
    ViewBag.Title = "Index";
}


<h2>Users</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OperationGroups)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Operations)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.Name(item.OperationGroupsToString())
            </td>
            <td>
                @Html.Name(item.OperationsToString());
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
    </tr>
}

</table>
